          "raw": "{\n  \"market\": \"ETH/USDT PERP\",\n  \"timeframe\": \"4h\",\n  \"parameters\": {\n    \"short_period\": 12,\n    \"long_period\": 26\n  },\n  \"initial_capital\": 5000\n}"
